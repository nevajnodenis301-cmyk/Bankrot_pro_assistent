# ===========================================
# Bankrot PRO - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==== PostgreSQL Database ====
POSTGRES_USER=bankrot
POSTGRES_PASSWORD=your_secure_password_here

# ==== Security (REQUIRED) ====
# JWT signing key - generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here_min_32_chars

# API token for bot-to-API authentication - generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_TOKEN=your_api_token_here

# Encryption key for sensitive data (optional) - generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=

# ==== Telegram Bot ====
TELEGRAM_TOKEN=your_telegram_bot_token_here

# ==== AI Provider Configuration ====
# Provider: timeweb | yandexgpt
AI_PROVIDER=timeweb

# Timeweb Cloud AI API
TIMEWEB_API_KEY=your_timeweb_api_key
TIMEWEB_API_URL=https://api.timeweb.cloud/v1

# YandexGPT (optional, if AI_PROVIDER=yandexgpt)
YANDEXGPT_API_KEY=
YANDEXGPT_FOLDER_ID=

# OpenAI (optional)
OPENAI_API_KEY=

# ==== Database URL (auto-generated from above) ====
DATABASE_URL=postgresql+asyncpg://bankrot:your_password@postgres:5432/bankrot
